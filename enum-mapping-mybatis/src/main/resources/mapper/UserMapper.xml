<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kws.mybatis.mapper.UserMapper" >
    <resultMap id="BaseResultMap" type="com.kws.mybatis.entity.User" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="gender" property="gender" jdbcType="TINYINT" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, name, gender
    </sql>

    <insert id="insert" parameterType="com.kws.mybatis.entity.User" >
        insert into user (name, gender)
        values (#{name,jdbcType=VARCHAR}, #{gender,jdbcType=TINYINT})
    </insert>

    <select id="findAll" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from user
    </select>

</mapper>